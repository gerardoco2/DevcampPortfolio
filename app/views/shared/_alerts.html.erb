<% if flash[:alert] %>
	<%= js add_gritter(flash[:alert], :title => "Gerardo Colina Portfolio", sticky: false) %>
<% elsif flash[:error] %>
	<%= js add_gritter(flash[:error], :title => "Gerardo Colina Portfolio", sticky: false) %>
<% else %>
	<%= js add_gritter(flash[:notice], :title => "Gerardo Colina Portfolio", sticky: false) %>
<% end %>